<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Ejercicio5.Controller">
    <children>
        
        <TextField fx:id="nombreTextField" promptText="Nombre" />
        <TextField fx:id="anioTextField" promptText="Año" />
         <ComboBox fx:id="cmbCompania" />
        <TextField fx:id="precioTextField" promptText="Precio" />
        <TextField fx:id="sinopsisTextField" promptText="Sinopsis" />
         <ChoiceBox fx:id="choicePlataforma" prefWidth="150.0" />
        <Button fx:id="btnAgregarJuego" onAction="#agregarJuego" text="Añadir" />
      <Button mnemonicParsing="false" onAction="#limpiarCampos" text="Limpiar" />
      <Button mnemonicParsing="false" onAction="#borrarRegistro" text="Borrar" />
    </children>
</VBox>
